pipeline{
    agent any
    tools{
        maven 'maven3'
    }
    stages{
        stage('checkout the code'){
            steps{
                git url:'https://github.com/micku1234/MavenWebProject.git', branch: 'main'
            }
        }
        stage('build the code'){
            steps{
                sh 'mvn clean package'
            }
        }
       stage('Generate sonarqube-analysis'){
            steps{
                withSonarQubeEnv(installationName: 'sonarqube-8', credentialsId: 'sonarqube-cred') {
                 sh 'mvn sonar:sonar'
                }
            }
        } 
        stage('Upload War file to Nexus'){
            steps{
             nexusArtifactUploader artifacts: [
                 [
                     artifactId: 'MavenWebProject', 
                     classifier: '', 
                     file: 'target/Deepshikha.war', 
                     type: 'war'
                ]
            ], 
            credentialsId: 'nexus-cred', 
            groupId: 'Deep123', 
            nexusUrl: '3.88.190.153:8081', 
            nexusVersion: 'nexus3', 
            protocol: 'http', 
            repository: 'Newrepo', 
            version: '2.0.0'
            }
        }
    }
}
